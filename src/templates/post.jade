doctype html
html(lang="en")
	head
		title #{post.name}
	body
		section.post
			.container.text-right
				a(href="http://localhost:8000/blog").text-faded view all
				.row
					.col-lg-8.col-lg-offset-2.text-center
						h2.section-heading #{post.name}
						hr.light
						p.text-faded
							| #{post.description}
						.article
							| #{post.description}